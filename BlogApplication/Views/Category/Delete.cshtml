@using DataLibrary.Models

@model CategoriesModel


@{
	ViewData["Title"] = "Delete category from blog";
}

<h1>Delete Post</h1>

<h4>Blog</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Categories_Id" class="control-label"></label>
				<input asp-for="Categories_Id" class="form-control" readonly/>
				<span asp-validation-for="Categories_Id" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Blog_Id" class="control-label"></label>
				<input asp-for="Blog_Id" class="form-control" readonly/>
				<span asp-validation-for="Blog_Id" class="text-danger"></span>
			</div>
		</form>
	</div>
</div>

<form asp-action="Delete">
	<input type="hidden" asp-for="Id" />
	<input type="submit" value="Delete" class="btn btn-danger" />
	<a asp-action="Index" asp-controller="Blog">Back to List</a>
</form>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}