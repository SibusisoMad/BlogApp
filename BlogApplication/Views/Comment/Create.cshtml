@using DataLibrary.Models;

@model CommentModel
@{
	ViewData["Title"] = "Create New Comment";
}


<h1>Create New Comment</h1>

<div class="container text-center">
	<div class="row">
		<div class="col-md-12">
			<form asp-action="Create">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="Content"> Max Characters(300)</label>
					<textarea asp-for="Content" cols="10" rows="10" class="form-control"></textarea>
					<span asp-validation-for="Content" class="text-danger"></span>
				</div>
				<div class="form-group">
					<input type="submit" value="Create" class="btn btn-primary" />
				</div>
			</form>
		</div>
	</div>

	<a asp-action="Index" asp-controller="Blog">Back to blogs</a>
</div>